<h1>Posts</h1>

<%= link_to 'New Post', new_post_path %>

<ul>
  <% @posts.each do |post| %>
    <li>
      <h2><%= post.title %></h2>
      <p><%= post.body %></p>
      <% if user_signed_in? %>
        <!-- Display author's name if user is signed in -->
        <small>Posted by <%= post.user.name %> on <%= post.created_at.strftime("%B %d, %Y") %></small>
      <% else %>
        <small>Posted on <%= post.created_at.strftime("%B %d, %Y") %></small>
      <% end %>
    </li>
  <% end %>
</ul>
